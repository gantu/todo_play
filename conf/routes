# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /employees                  controllers.EmployeeController.list
GET     /employees/:departmentId    controllers.EmployeeController.listEmployeesOfDepartment(departmentId:Long)

POST    /employees                  controllers.EmployeeController.add

POST    /multiEmployees                  controllers.EmployeeController.addMultipleEmployees

GET     /departments                controllers.DepartmentController.listOfDepartments
POST    /department               controllers.DepartmentController.addDepartment